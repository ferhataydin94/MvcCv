@model List<MvcCv.Models.Entity.TblAdmin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Admin Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>id</th>
        <th>Kullanıcı Adı</th>
        <th>Şifre</th>
        <th>Düzenle</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID </td>
            <td>@item.KullaniciAdi</td>
            <td><a href="/Admin/AdminSil/@item.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/AdminDuzenle/@item.ID" class="btn btn-warning">Düzenle</a></td>
        </tr>
    }
</table>

<a href="/Admin/AdminEkle/" class="btn btn-primary">Yeni Kullaıcı Ekle Ekle</a>

